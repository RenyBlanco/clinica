<!---- Encabezado ------>
<%- include('includes/header2'); %>
<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <%- include('includes/navbar'); %>
        <!-- /.navbar -->
        <!-- Sidebar Menu -->
        
        <%- include('includes/sidebar'); %>

        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        
                    </div>
                </div>
            </section>
    
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header">
                                    <div class="float-left">
                                        <h3 style="color: gray;"><i class="fa fa-user-plus"></i> Nuevo Usuario</h3>
                                    </div>
                                    <div class="float-right">
                                    <a href="/usuarios" class="btn btn-outline-success">
                                        <i class="fa fa-reply" aria-hidden="true"></i> Regresar al listado
                                    </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <form method="post" action="/usuarios/registro" id="frmRegistro" autocomplete="off">
                                        <div class="form-group">
                                            <label for="nombre">Nombre</label>
                                            <input class="form-control" type="text" name="nombre" required id="nombre" autofocus
                                                placeholder="Nombre del usuario">
                                        </div>
                                        <div class="form-group">
                                            <label for="correo">Correo</label>
                                            <input class="form-control" type="email" name="correo" required id="correo"
                                                placeholder="tu_correo@dominio.com">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="rol_id">Tipo de Usuario</label>
                                            <select required class="custom-select" name="rol_id">
                                                <option value="0">Seleccione un rol</option>
                                                <% roles.forEach(function(rol){ %>
                                                    <option value="<%= rol.id %>"><%= rol.rol %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="clave">Contrase単a</label>
                                            <input name="clave" required type="password" class="form-control" id="pass"
                                                placeholder="Escribe tu contrase単a">
                                        </div>
                                        <div class="form-group">
                                            <label for="clave2">Confirma tu contrase単a</label>
                                            <input name="clave2" required type="password" class="form-control" id="pass2"
                                                placeholder="Vuelve a escribir tu contrase単a">
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-save"></i> Guardar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <%- include('includes/footer2'); %> 
        
        <script type="text/javascript">
            $(document).ready(function () {

                APP.validacionGeneral('frmRegistro');
                
                $("#rut").on('change', function() {
                    let rut = $("#rut").val().slice().replaceAll('.','');
                    let indice = rut.indexOf('-');
                    let digito = rut[indice+1];
                    digito = digito.toUpperCase();
                    let contador = 0;
                    let suma = 0;
                    let inicio = indice-1;

                    for(let i = inicio; i >= 0; i--) {
                        suma += (parseInt(rut[i])*(2+contador));
                        if(contador < 5){
                            contador++;
                        }else{
                            contador=0;
                        }
                    }
                    
                    let valor = parseInt(suma/11);
                    let diferencia = suma-(valor*11);
                    let verifica = 11-diferencia;
                    verifica === 10 ? verificador = 'K' : verificador = verifica; 

                    if(digito != verificador) {
                        toastr.error('Rut Invalido');
                        $("#rut").val('');
                        $("#rut").focus();
                    }
                    
                });
            });
        </script>
    </body>
</html>
    